FROM openjdk:11-jre-slim-buster

RUN apt-get update \
    && apt-get install -y wget \
    && apt-get clean

RUN wget -O swarm-client.jar https://repo.jenkins-ci.org/releases/org/jenkins-ci/plugins/swarm-client/3.18/swarm-client-3.18.jar

CMD [ "-master", "https://nginx", "-username", "slave", "-password", "slave123", "-disableSslVerification", "-tunnel", "master:8081"]
ENTRYPOINT [ "java", "-jar", "swarm-client.jar" ]